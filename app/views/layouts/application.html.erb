			<%= content_tag :div, msg, :id => "flash_#{name}" %>
			<% end %>
			<br />

			<%= yield %>

			<br />
			<br />
			<br />
			<br />
			<section id="pie">
				<footer>
					<center>

						<span class="copyright">Copyright &copy; 2012 <a href="#">iRomero</a>, All Rights Reserved</span>
						<p>
							<a href="/contact/">Contactos</a>
							| <a href="/terms.html">terminos de uso</a>
							| <a href="/privacy.html">Privacidad</a>

					</center>
				</footer>
			</section>
		</section>
	</body>

</html>
