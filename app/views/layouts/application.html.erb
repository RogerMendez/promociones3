<!DOCTYPE html>
<html>
	<head>
		<title>Promociones2</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag    "application" %>
		<%= csrf_meta_tags %>
	</head>

	<body class="<%= params[:controller] %>" background="/images/fondo.jpg">

		<section id="todo">
			<header>
				<div id="logo">
					<img src="/images/logo.png" widht="100" height="100">
				</div>
