					<%= link_to "Cerrar sesión", logout_path %>
					<% else %>
					<div align="center">
						<%= link_to "Regístrese", signup_path %> o
						<%= link_to "Inicie sesión", login_path %>
					</div><%= render "new"%>
					<% end %>
				</div>

			</header>
			<nav id="menu1">
				<ul>
					<li>
						<a href="../home/index">INICIO</a>
					</li>
					<li>
						<a href="#">Ciudad</a>
					</li>
					<li>
						<a href="#">empresas</a>
					</li>
					<li>
						<a href="#">configuracion</a>
					</li>
					<li>
						<a href="#">slide</a>
					</li>
				</ul>
			</nav>

			<br />
